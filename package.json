{
  "name": "concordialang-plugin",
  "version": "0.4.0",
  "description": "Plugin basic declarations for Concordia Language",
  "license": "AGPL-3.0",
  "readme": "readme.md",
  "homepage": "https://github.com/thiagodp/concordialang-plugin#readme",
  "author": {
    "name": "Thiago Delgado Pinto",
    "email": "thiago-dp@bol.com.br"
  },
  "keywords": [
    "concordialang",
    "concordia-lang",
    "concordia",
    "plugin",
    "plug-in",
    "test",
    "script",
    "test-script"
  ],
  "main": "dist",
  "types": "dist",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "rimraf dist && tsc",
    "test": "jest",
    "preversion": "npm run build && npm run test",
    "postversion": "git push && git push --tags"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thiagodp/concordialang-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/thiagodp/concordialang-plugin/issues"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^11.11.6",
    "jest": "^24.5.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.0",
    "typescript": "^3.3.4000"
  },
  "dependencies": {
    "concordialang-types": "^0.2.0"
  }
}

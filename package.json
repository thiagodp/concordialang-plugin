{
  "name": "concordialang-plugin",
  "version": "1.1.0",
  "description": "Concordia Compiler Plug-in",
  "license": "AGPL-3.0",
  "homepage": "https://github.com/thiagodp/concordialang-plugin",
  "author": {
    "name": "Thiago Delgado Pinto",
    "site": "https://github.com/thiagodp"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thiagodp/concordialang-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/thiagodp/concordialang-plugin/issues"
  },
  "keywords": [
    "concordialang",
    "concordia-lang",
    "concordia",
    "plugin",
    "plug-in",
    "test",
    "script",
    "test-script"
  ],
  "main": "dist/index.js",
  "types": "dist",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "rimraf dist && tsc",
    "test": "jest",
    "all": "npm run build && npm run test",
    "preversion": "npm run all",
    "postversion": "git push && git push --tags"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/node": "^8.10.66",
    "jest": "^25.5.4",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.5.1",
    "typescript": "^3.9.9"
  },
  "dependencies": {
    "concordialang-types": "^2.1.4"
  }
}

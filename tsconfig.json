{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "concordialang-types/*": [ "node_modules/concordialang-types/dist/*" ]
        },
        "outDir": "dist",
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": false,
        "declaration": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "keyofStringsOnly": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}